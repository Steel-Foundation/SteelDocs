---
import { Github } from "@lucide/astro";

interface Props {
  heading: string;
  headingHighlight: string;
  descriptionBold1: string;
  descriptionMiddle: string;
  descriptionBold2: string;
  descriptionAfter: string;
  discordHref: string;
  githubHref: string;
}

const {
  heading,
  headingHighlight,
  descriptionBold1,
  descriptionMiddle,
  descriptionBold2,
  descriptionAfter,
  discordHref,
  githubHref,
} = Astro.props;

const glassStyle = {
  backdropFilter: "blur(2px)",
  WebkitBackdropFilter: "blur(2px)",
  boxShadow: "0 4px 30px rgba(0, 0, 0, 0.1)",
};
---

<section id="join-us" class="flex flex-col items-center my-32">
  <h2
    class="md:text-6xl text-5xl text-center text-teal-950 dark:text-white mb-4 font-minecraft font-bold"
  >
    {heading}
    <span class="text-amber-500 dark:text-amber-400 font-bold italic"
      >{headingHighlight}</span
    >
  </h2>
  <p
    class="text-lg text-center max-w-180 mx-auto text-teal-700 dark:text-gray-300"
  >
    <span class="text-teal-950 dark:text-white font-bold"
      >{descriptionBold1}</span
    >{descriptionMiddle}
    <span class="text-teal-950 dark:text-white font-bold"
      >{descriptionBold2}</span
    >{descriptionAfter}
  </p>
  <div class="mt-4 flex gap-4">
    <div
      class="h-12 w-12 p-2 hover:scale-110 transition-all duration-300 rounded-full border hover:opacity-100 bg-teal-600/20 dark:bg-white/30 border-teal-400 dark:border-white/40"
      style={glassStyle}
    >
      <a href={discordHref}>
        <svg
          class="w-full h-full text-teal-700 dark:text-teal-100 size-4"
          viewBox="0 0 24 24"
          fill="currentColor"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0 12.64 12.64 0 0 0-.617-1.25.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057c.002.04.02.082.042.104a19.9 19.9 0 0 0 5.993 3.03.078.078 0 0 0 .084-.028c.462-.63.874-1.295 1.226-1.994a.076.076 0 0 0-.041-.106 13.107 13.107 0 0 1-1.872-.892.077.077 0 0 1-.008-.128 10.2 10.2 0 0 0 .372-.292.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127 12.299 12.299 0 0 1-1.873.892.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028 19.839 19.839 0 0 0 6.002-3.03.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.956-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.955-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.946 2.418-2.157 2.418z"
          ></path>
        </svg>
      </a>
    </div>

    <div
      class="h-12 w-12 p-2 hover:scale-110 transition-all duration-300 rounded-full border hover:opacity-100 bg-teal-600/20 dark:bg-white/30 border-teal-400 dark:border-white/40"
      style={glassStyle}
    >
      <a href={githubHref}>
        <Github class="w-full h-full text-teal-700 dark:text-teal-100" />
      </a>
    </div>
  </div>
</section>
