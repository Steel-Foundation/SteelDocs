          ></path>
        </svg>
      </a>

      <!-- GitHub -->
      <a
        href="https://github.com/Steel-Foundation/SteelMC"
        target="_blank"
        rel="noopener noreferrer"
        class="p-1.5 rounded-xl text-teal-600 dark:text-white/60 hover:text-teal-950 dark:hover:text-white hover:bg-teal-100 dark:hover:bg-white/10 transition-all"
        aria-label="GitHub repository"
      >
        <Github class="size-4" />
      </a>
    </div>
  </nav>
</header>

<script>
  // --- Language dropdown ---
  const langBtn = document.getElementById("lang-btn");
  const langMenu = document.getElementById("lang-menu");
  const langChevron = document.getElementById("lang-chevron");

  function closeLang() {
    langMenu?.classList.add("hidden");
    langChevron?.classList.remove("rotate-180");
    langBtn?.setAttribute("aria-expanded", "false");
  }

  langBtn?.addEventListener("click", (e) => {
    e.stopPropagation();
    const isOpen = !langMenu?.classList.contains("hidden");
    if (isOpen) {
      closeLang();
    } else {
      langMenu?.classList.remove("hidden");
      langChevron?.classList.add("rotate-180");
      langBtn?.setAttribute("aria-expanded", "true");
    }
  });

  document.addEventListener("click", closeLang);

  // --- Theme toggle ---
  const themeToggle = document.getElementById("theme-toggle");
  const sunIcon = document.getElementById("sun-icon");
  const moonIcon = document.getElementById("moon-icon");

  function applyTheme(theme: string) {
    if (theme === "light") {
      document.documentElement.setAttribute("data-theme", "light");
      document.documentElement.classList.remove("dark");
      sunIcon?.classList.add("hidden");
      moonIcon?.classList.remove("hidden");
    } else {
      document.documentElement.removeAttribute("data-theme");
      document.documentElement.classList.add("dark");
      sunIcon?.classList.remove("hidden");
      moonIcon?.classList.add("hidden");
    }
  }

  const saved = localStorage.getItem("theme") ?? "dark";
  applyTheme(saved);

  themeToggle?.addEventListener("click", () => {
    const current =
      document.documentElement.getAttribute("data-theme") === "light"
        ? "dark"
        : "light";
    applyTheme(current);
    localStorage.setItem("theme", current);
  });

  // --- Pagefind search ---
  const searchInput = document.getElementById(
    "navbar-search",
  ) as HTMLInputElement | null;
  const searchResults = document.getElementById("search-results");
  const searchResultsList = document.getElementById("search-results-list");
  const searchNoResults = document.getElementById("search-no-results");
  const searchDevWarning = document.getElementById("search-dev-warning");

  let pagefind: any = null;
  let debounceTimer: ReturnType<typeof setTimeout>;

  const closeResults = () => searchResults?.classList.add("hidden");
  const showResults = () => searchResults?.classList.remove("hidden");

  const isDark = () => document.documentElement.classList.contains("dark");

  if (import.meta.env.DEV) {
    searchInput?.addEventListener("focus", () => {
      searchNoResults?.classList.add("hidden");
      searchDevWarning?.classList.remove("hidden");
      showResults();
    });
  } else {
    // Lazy-load pagefind on first interaction
    let pagefindLoading: Promise<void> | null = null;

    const loadPagefind = () => {
      if (pagefindLoading) return pagefindLoading;
      const bundlePath =
        import.meta.env.BASE_URL.replace(/\/$/, "") + "/pagefind/pagefind.js";
      pagefindLoading = import(/* @vite-ignore */ bundlePath)
        .then((mod) => {
          pagefind = mod;
        })
        .catch(() => {
          console.warn("Pagefind could not be loaded.");
        });
      return pagefindLoading;
    };

    searchInput?.addEventListener("focus", loadPagefind);

    searchInput?.addEventListener("input", async (e) => {
      const term = (e.target as HTMLInputElement).value.trim();
      clearTimeout(debounceTimer);

      if (!term) {
        closeResults();
        return;
      }

      debounceTimer = setTimeout(async () => {
        await loadPagefind();
        if (!pagefind) return;

        try {
          const res = await pagefind.search(term);
          const top = res.results.slice(0, 7);

          if (searchResultsList) searchResultsList.innerHTML = "";

          if (top.length === 0) {
            searchNoResults?.classList.remove("hidden");
            showResults();
            return;
          }

          searchNoResults?.classList.add("hidden");

          const fragments = await Promise.all(top.map((r: any) => r.data()));

          fragments.forEach((fragment: any) => {
            const a = document.createElement("a");
            a.href = fragment.url;
            a.className = isDark()
              ? "block px-4 py-2.5 hover:bg-white/10 transition-colors border-b border-white/5 last:border-0"
              : "block px-4 py-2.5 hover:bg-teal-50 transition-colors border-b border-teal-100 last:border-0";
            a.innerHTML = isDark()
              ? `<div class="text-sm font-medium text-white truncate">${fragment.meta?.title ?? fragment.title}</div>
                 <div class="text-xs text-white/50 mt-0.5 line-clamp-1">${fragment.excerpt}</div>`
              : `<div class="text-sm font-medium text-teal-950 truncate">${fragment.meta?.title ?? fragment.title}</div>
                 <div class="text-xs text-teal-500 mt-0.5 line-clamp-1">${fragment.excerpt}</div>`;
            a.addEventListener("click", closeResults);
            searchResultsList?.appendChild(a);
          });

          showResults();
        } catch {
          // silently fail
        }
      }, 250);
    });

    searchInput?.addEventListener("keydown", (e) => {
      if (e.key === "Escape") {
        closeResults();
        searchInput.blur();
      } else if (e.key === "Enter") {
        const first = searchResultsList?.querySelector(
          "a",
        ) as HTMLAnchorElement | null;
        if (first) {
          window.location.href = first.href;
          closeResults();
        }
      }
    });
  }

  document.addEventListener("click", (e) => {
    if (!document.getElementById("search-form")?.contains(e.target as Node)) {
      closeResults();
    }
  });
</script>

<style>
  #search-results mark {
    background: transparent;
    color: rgb(52 211 153); /* emerald-400 */
    font-weight: 600;
  }
</style>
