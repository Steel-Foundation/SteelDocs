---
import RotatingText from "@/components/homepage/RotatingText";

interface Props {
  prefix: string;
  rotatingTexts: string[];
}

const { prefix, rotatingTexts } = Astro.props;
---

<section>
  <RotatingText
    client:only="react"
    texts={rotatingTexts}
    mainClassName=" sm:px-2 md:px-3 bg-amber-400 overflow-hidden text-black font-bold py-0.5 sm:py-1 md:py-2 justify-center"
    className="flex flex-col md:flex-row gap-2 text-2xl md:text-4xl lg:text-5xl items-center justify-center my-30 font-normal font-minecraft"
    staggerFrom={"last"}
    initial={{ y: "100%" }}
    animate={{ y: 0 }}
    exit={{ y: "-120%" }}
    staggerDuration={0.015}
    splitLevelClassName="overflow-hidden pb-0.5 sm:pb-1 md:pb-1"
    transition={{ type: "tween", damping: 30, stiffness: 400 }}
    animatePresenceMode="popLayout"
    rotationInterval={2000}
  >
    <p class="dark:text-white text-teal-950">{prefix}</p>
  </RotatingText>
</section>
